<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8">
        <title>Sergio DrumPad</title>
        
        <style>
            div#audioElements {
                display: block;
                background-color: rgb(200,240,200);
            }
        
            div#padArea {
                float: top;
                height: 50%;
                background-color: rgb(250,200,0);
            }
            
            button.drumPad {
                height: 30%;
                margin: 3px;
                background-color: rgb(180,180,180);
                font-size: 6em;
            }
        </style>
    </head>
    <body>
        <h1>Drum sounds with audio tags</h1>
        
        <div id="audioElements" width="100%">
            <h2>Audio elements</h2>
            <audio controls id="audio1"></audio>
            <audio controls id="audio2"></audio>
            <audio controls id="audio3"></audio>
            <audio controls id="audio4"></audio>
        </div>
        
        <div id="padArea" width="100%">
            <h2>Trigger pads</h2>
            <button id="pad1" class="drumPad">1</button>
            <button id="pad2" class="drumPad">2</button>
            <button id="pad3" class="drumPad">3</button>
            <button id="pad4" class="drumPad">4</button>
        </div>
        
        
        <script>
            var players = []; // empty array
            var pads = [];
            
            // you will need to fix problems with this code
            // (read the exercises for more details)
            pads[1] = document.getElementById("pad" + 1);
            pads[2] = document.getElementById("pad2");
            pads[3] = document.getElementById("pad3");
            pads[4] = document.getElementById("pad4");
            
            pads[1].addEventListener("mousedown", padActions);
            pads[2].addEventListener("mousedown", padActions);
            pads[3].addEventListener("mousedown", padActions);
            pads[4].addEventListener("mousedown", padActions);
            
            /*
             the above repetitive code is equivalent to the for-loop below
            
             for(var i=1; i<=4; i++) {
                pads[i] = document.getElementById("pad" + i);
                pads[i].addEventListener("mousedown", padActions);
             }
            */
        
            // you will need to add additional code for each player
            players[1] = document.getElementById("audio" + 1);
            players[1].src = "sound" + 1 + ".mp3";
            players[1].load();
            
            /*
             padActions() callback function triggers an audio player in
             the players[] array depending on which trigger pad activated
            */
            function padActions(event){
                var padThatWasClicked = event.target;
                var padIndexInArray = pads.indexOf(padThatWasClicked);
                
                players[padIndexInArray].currentTime = 0; //rewind audio
                players[padIndexInArray].play();
            }
        
            </script>
        
    </body>
</html>
